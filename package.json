{
  "name": "express-ts",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "12"
  },
  "scripts": {
    "start": "bin/www",
    "dev": "export PORT=3003 && nodemon --inspect bin/www",
    "copy-static": "cp -r views dist/ && cp -r public dist/",
    "ts-compile": "tsc",
    "ts-watch": "tsc -w",
    "build": "npm run ts-compile && npm run copy-static",
    "clean": "rm -rf node_modules/ dist/",
    "docker-build": "npm run build && docker build -t express-ts .",
    "docker-run": "docker run -p 3000:3000 express-ts",
    "lint": "tslint -p ."
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "12",
    "nodemon": "^2.0.6",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}
